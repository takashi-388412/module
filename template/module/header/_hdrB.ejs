<%# PCの場合 %>
<% if (deviceMode == 'pc') { %>
  <header id="hdr" class="hdr--typeB">
    <div class="hdrMiddle hdrMiddle--logoLeft">
      <div class="hdrInner">
        <h1 id="hdrLogo" class="hdrMiddle__left"><a href="/"><img class="gNav__listIcon" src="https://corekara.co.jp/wp-content/uploads/module/dummyLogo.svg" alt="" width="205" height="40"></a></h1>
        <div class="hdrMiddle__center">
          <%- include('../../parts/header/_hdrInfoA') %>

        </div>
        <div class="hdrMiddle__right">
          <%- include('../../parts/header/_iconNav') %>
        </div>

      </div>
    </div>
    <div class="hdrBottom hdrFixed">
      <div class="hdrInner">
        <%- include('../../parts/header/_gNavA') %>
        <%- include('../../parts/general/_searchFormB') %>
      </div>
    </div>
  </header>
<% } %>

<%# SPの場合 %>
<% if (deviceMode == 'sp') { %>
  <header id="hdr" class="hdr--typeB">
    <div class="hdrTop text--center">
      <div class="hdrInner">
        <%- include('../../parts/header/_hdrInfoA') %>
      </div>
    </div>
    <div class="hdrMiddle hdrMiddle--logoCenter hdrFixed">
      <div class="hdrInner">
        <div class="hdrMiddle__left">
          <%- include('../../parts/header/_iconNavMenuB') %>
        </div>
        <h1 id="hdrLogo" class="hdrMiddle__center"><a href="/"><img class="gNav__listIcon" src="https://corekara.co.jp/wp-content/uploads/module/dummyLogo.svg" alt="" width="205" height="40"></a></h1>
        <div class="hdrMiddle__right">
          <%- include('../../parts/header/_iconNav') %>
        </div>
      </div>
    </div>
    <div class="hdrBottom hdrBottom--onlyNav">
      <div class="hdrInner">
        <%- include('../../parts/general/_searchFormA') %>
      </div>
    </div>
  </header>
<% } %>


<%# SPの場合 %>
<% if (deviceMode == 'responsive') { %>
  <header id="hdr" class="hdr--typeB">
    <div class="hdrMiddle hdrMiddle--logoLeft">
      <div class="hdrInner">
        <div class="hdrMiddle__left spOnly">
          <%- include('../../parts/header/_iconNavMenuB') %>
        </div>
        <h1 id="hdrLogo" class="hdrMiddle__left"><a href="/"><img class="gNav__listIcon" src="https://corekara.co.jp/wp-content/uploads/module/dummyLogo.svg" alt="" width="205" height="40"></a></h1>
        <div class="hdrMiddle__center">
          <%- include('../../parts/header/_hdrInfoA') %>

        </div>
        <div class="hdrMiddle__right">
          <%- include('../../parts/header/_iconNav') %>
        </div>
      </div>
    </div>
    <div class="hdrBottom hdrFixed">
      <div class="hdrInner">
        <div class="pcOnly"><%- include('../../parts/header/_gNavA') %></div>
        <%- include('../../parts/general/_searchFormB') %>
      </div>
    </div>
  </header>
<% } %>
